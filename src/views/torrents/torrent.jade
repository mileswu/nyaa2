- if (!torrent)
  h2 This link is invalid
- else
  h2= torrent.title
  h3 Size
  p= humanize_size(torrent.size)
  h3 Category
  p= torrent.category
  h3 Date Uploaded
  p(title=torrent.dateUploaded)= humanize_date(torrent.dateUploaded)
  h3 Uploader
  p
    - if (torrent.uploader === undefined)
      | Anonymous
    - else
      a(href=('/user/' + torrent.uploader))= torrent.uploader
  h3 Peers/Seeds
  p #{torrent.peers} #{torrent.seeds}
  3 Description
  p= torrent.description
  h3 Files
  table
    - each file in torrent.files
      tr
        td= file.path
        td= humanize_size(file.size)

